# env.example
# Пример файла переменных окружения для продакшена
# Скопируйте этот файл в .env и заполните реальными значениями

# ===========================================
# БАЗА ДАННЫХ
# ===========================================
DATABASE_URL="postgresql://username:password@localhost:5432/domeo_db"

# ===========================================
# REDIS КЭШИРОВАНИЕ
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ===========================================
# YANDEX OBJECT STORAGE
# ===========================================
YANDEX_STORAGE_ENDPOINT=https://storage.yandexcloud.net
YANDEX_STORAGE_ACCESS_KEY_ID=your_access_key_id
YANDEX_STORAGE_SECRET_ACCESS_KEY=your_secret_access_key
YANDEX_STORAGE_BUCKET_NAME=your_bucket_name
YANDEX_STORAGE_REGION=ru-central1

# ===========================================
# ПРИЛОЖЕНИЕ
# ===========================================
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# ===========================================
# ЛОГИРОВАНИЕ
# ===========================================
LOG_LEVEL=info
LOG_DIR=./logs

# ===========================================
# МОНИТОРИНГ
# ===========================================
GRAFANA_PASSWORD=your_grafana_password

# ===========================================
# БЕЗОПАСНОСТЬ
# ===========================================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# ===========================================
# EMAIL (опционально)
# ===========================================
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_USER=your_email@yandex.ru
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@domeo.ru

# ===========================================
# SMS (опционально)
# ===========================================
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.sms.ru/sms/send

# ===========================================
# ИНТЕГРАЦИИ
# ===========================================
# 1C API
ONEC_API_URL=https://your-1c-server.com/api
ONEC_API_USER=your_1c_user
ONEC_API_PASSWORD=your_1c_password

# CRM API
CRM_API_URL=https://your-crm.com/api
CRM_API_KEY=your_crm_api_key

# ===========================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# ===========================================
# Максимальное количество соединений с БД
DB_MAX_CONNECTIONS=20

# Размер пула соединений Redis
REDIS_POOL_SIZE=10

# Таймауты
REQUEST_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000
REDIS_TIMEOUT=5000

# ===========================================
# НАСТРОЙКИ ФАЙЛОВ
# ===========================================
# Максимальный размер загружаемого файла (в байтах)
MAX_FILE_SIZE=52428800

# Разрешенные типы файлов
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Путь для временных файлов
TEMP_DIR=./temp

# ===========================================
# НАСТРОЙКИ КЭШИРОВАНИЯ
# ===========================================
# Время жизни кэша для товаров (в секундах)
CACHE_PRODUCTS_TTL=300

# Время жизни кэша для категорий (в секундах)
CACHE_CATEGORIES_TTL=600

# Время жизни кэша для пользователей (в секундах)
CACHE_USERS_TTL=1800

# ===========================================
# НАСТРОЙКИ ПАГИНАЦИИ
# ===========================================
# Размер страницы по умолчанию
DEFAULT_PAGE_SIZE=20

# Максимальный размер страницы
MAX_PAGE_SIZE=100

# ===========================================
# НАСТРОЙКИ ПОИСКА
# ===========================================
# Минимальная длина поискового запроса
MIN_SEARCH_LENGTH=2

# Максимальное количество результатов поиска
MAX_SEARCH_RESULTS=1000

# ===========================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ===========================================
# Максимальное количество попыток входа
MAX_LOGIN_ATTEMPTS=5

# Время блокировки после превышения попыток (в минутах)
LOGIN_BLOCK_TIME=15

# Время жизни сессии (в часах)
SESSION_LIFETIME=24

# ===========================================
# НАСТРОЙКИ УВЕДОМЛЕНИЙ
# ===========================================
# Включить email уведомления
ENABLE_EMAIL_NOTIFICATIONS=true

# Включить SMS уведомления
ENABLE_SMS_NOTIFICATIONS=false

# Включить push уведомления
ENABLE_PUSH_NOTIFICATIONS=true

# ===========================================
# НАСТРОЙКИ BACKUP
# ===========================================
# Автоматическое создание резервных копий
AUTO_BACKUP_ENABLED=true

# Интервал создания резервных копий (в часах)
BACKUP_INTERVAL=24

# Количество хранимых резервных копий
BACKUP_RETENTION_DAYS=30

# ===========================================
# НАСТРОЙКИ МОНИТОРИНГА
# ===========================================
# Включить сбор метрик
ENABLE_METRICS=true

# Интервал сбора метрик (в секундах)
METRICS_INTERVAL=30

# Включить алерты
ENABLE_ALERTS=true

# Email для алертов
ALERT_EMAIL=admin@domeo.ru

# ===========================================
# НАСТРОЙКИ РАЗВЕРТЫВАНИЯ
# ===========================================
# Версия приложения
APP_VERSION=1.0.0

# Окружение
ENVIRONMENT=production

# Регион развертывания
DEPLOYMENT_REGION=ru-central1

# Кластер
CLUSTER_NAME=domeo-cluster

# ===========================================
# НАСТРОЙКИ ОТЛАДКИ
# ===========================================
# Включить отладочные логи
DEBUG_ENABLED=false

# Уровень детализации логов
LOG_DETAIL_LEVEL=normal

# Включить профилирование
PROFILING_ENABLED=false
