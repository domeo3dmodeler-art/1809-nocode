generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id          Int     @id @default(autoincrement())
  category    String? @default("doors")
  model       String
  style       String?
  finish      String
  color       String
  type        String
  width       Int
  height      Int
  rrc_price   Decimal @db.Decimal(12, 2)
  model_photo String?

  @@unique([category, model, finish, color, type, width, height], name: "ux_products_key")
  @@map("products")
}

model kits {
  id        String   @id
  name      String?
  price_rrc Decimal? @db.Decimal(12, 2)
  price_opt Decimal? @db.Decimal(12, 2)

  @@map("kits")
}

model handles {
  id                     String   @id
  name_web               String?
  price_opt              Decimal? @db.Decimal(12, 2)
  price_group_multiplier Decimal? @db.Decimal(12, 2)

  @@map("handles")
}
